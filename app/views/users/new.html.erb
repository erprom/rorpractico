<div class="row">
	<div class="col">
		<h3>Crear Usuario</h3>
	</div>
</div>
<div class="row">
	<div class="col">
		<%= form_for :user, url: users_path do |f| %>
		<% if @user.errors.any? %>
			<div>
				<h2>
				<%= pluralize(@user.errors.count, "error") %> han impedido que el usuario sea a√±adido:
		    	</h2>
		    	<ul>
		        <% @user.errors.full_messages.each do |msg| %>
		          <li><%= msg %></li>
		        	<% end %>
	        	</ul>
			</div>
			<% end %>
    <div class="form-group">
    	<%= f.label :nombre %><br>
    	<%= f.text_field :nombre %>
    </div>
    <div class="form-group">
    	<%= f.label :apellido %><br>
    	<%= f.text_field :apellido %>
    </div>
    <div class="form-group">
    	<%= f.label :email %><br>
    	<%= f.text_field :email %>
    </div>
    <div class="form-group">
    <%= f.submit 'Crear usuario', class:"btn btn-primary" %>
	<% end %>
    </div>
  
	</div>
</div>
<div class="row">
	<div class="col">
		<%= link_to 'Volver', users_path, class:"btn btn-danger" %>
	</div>
</div>