<div class="row">
	<div class="col">
		<h3>Crear Usuario</h3>
	</div>
</div>
<div class="row">
	<div class="col">
		<%= form_for :articulo do |f| %>
    <div class="form-group">
    	<%= f.label :nombre %><br>
    	<%= f.text_field :nombre %>
    </div>
    <div class="form-group">
    	<%= f.label :apellido %><br>
    	<%= f.text_field :apellido %>
    </div>
    <div class="form-group">
    	<%= f.label :mail %><br>
    	<%= f.text_field :mail %>
    </div>
    <div class="form-group">
    <%= f.submit 'Crear usuario' %>
    </div>
  
	<% end %>
	</div>
</div>