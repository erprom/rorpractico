<div class="row">
  <div class="col">
  
    <table class="table table-striped table-hover">  
      <% @users.each do |user| %>
        <tr>
          <th>
            <%=link_to user.nombre,user_path(user) %>
          </th>
    
          <td class="text-right">
            <%= link_to "Editar", edit_user_path(user), class:"btn btn-warning" %>
            <%= link_to 'Borrar', user_path(user),
                    method: :delete,
                    data: { confirm: '¿Estás seguro?' }, class:"btn btn-danger"%>
          </td>
        </tr>
      <% end %>
      </table>
  </div>
</div>
<footer>
  <div class="row">
    <div class="col text-center">
      <%= link_to "Añadir Miembro",new_user_path , class:"btn btn-primary" %>
    </div>
  </div>
</footer>